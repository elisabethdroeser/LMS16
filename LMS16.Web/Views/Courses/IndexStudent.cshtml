@model IEnumerable<LMS16.Core.ViewModels.StudentViewModels.StudentCourseViewModel>

@{
    ViewData["Title"] = "Student overview";
}

<h1>Student overview</h1>
<p>View Modules and activities linked to courses</p>

<table class="table">
    <thead>
        <tr>
            <th></th>
        </tr>
            <th></th>
        </tr>
    </thead>
    <tbody>
         @foreach (var item in Model) { 
        <tr>

            <td>
                <a asp-action="Edit" asp-route-id="@item">Edit</a> <span> | </span>
                <a asp-action="Details" asp-route-id="@item">Details</a> <span> | </span>
                <a asp-action="Delete" asp-route-id="@item">Delete</a>  <span> | </span>
                <a asp-action="CourseToggle" asp-route-id="@item">Add course</a>  <span> | </span>
            </td>
        </tr>
    }
        @*<!--partial name="CoursesPartial" model="@Model.ToList()[0].Course" /-->*@
    </tbody>
</table>
