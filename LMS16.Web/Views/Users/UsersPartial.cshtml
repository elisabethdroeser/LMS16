@model IEnumerable<LMS16.Core.ViewModels.UserViewModels.UserIndexViewModel>
@{
    @foreach (var item in Model) {
        <tr>
            <td>@Html.DisplayFor(modelItem => item.FirstName)</td>
            <td>@Html.DisplayFor(modelItem => item.LastName)</td>
            <td>@Html.DisplayFor(modelItem => item.CourseId)</td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> <span> | </span>
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> <span> | </span>
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a> <span> | </span>
            </td>
        </tr>
    }
}
